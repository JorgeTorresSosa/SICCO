<Window x:Class="WPFSICCO.PantallaInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSICCO"
        mc:Ignorable="d"
        Title="PantallaInicio" Height="800" Width="1200" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen"
        xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid Background="#FFC51162">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Border Grid.Row ="0" Background="Transparent" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <StackPanel VerticalAlignment="Top" Height="100" HorizontalAlignment="Right" Orientation="Horizontal" >
                <StackPanel Width="200" Orientation="Horizontal">
                    <MaterialDesign:PackIcon Kind="Delta" Width="40" Height="40" Foreground="White"/>
                    <MaterialDesign:PackIcon Kind="Settings" Width="40" Height="40" Foreground="White"/>
                </StackPanel>
                <StackPanel Width="Auto"> <!--Caja para buscar en net-->
                    <MaterialDesign:PackIcon Kind="Fire" Height="Auto" Width="40" Margin="0 25 0 0" Foreground="#FFFFFFFF" />
                    <TextBlock FontSize="22" Height="50" Width="180" Background="Transparent" Foreground="White"  MaterialDesign:HintAssist.Hint="Buscar" MaterialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Left" Text="Buscar" FontFamily="Adobe Gothic Std B" TextAlignment="Left" VerticalAlignment="Center"  Margin="40,-38,0,0" />
                </StackPanel>

                <Button Height="100" Width="80" Padding="0" Background="{x:Null}"  BorderBrush="{x:Null}">
                    <MaterialDesign:PackIcon Kind="Minus" Height="Auto" Width="40"/>
                </Button>
                <Button Height="100" Width="80" Padding="0" Background="{x:Null}"  BorderBrush="{x:Null}" >
                    <MaterialDesign:PackIcon Kind="Power" Height="Auto" Width="40"/>
                </Button>
            </StackPanel>
        </Border>


    </Grid>



</Window>
